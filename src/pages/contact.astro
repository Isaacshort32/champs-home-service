---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact" description="Contact Champs Home Service for a free window cleaning quote in Bend, Oregon. Call (541) 420-8350 or request a quote online.">
  <!-- Page Header -->
  <section class="bg-forest py-16 md:py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-warm-white mb-4">
        Contact Us
      </h1>
      <p class="text-warm-white/80 text-lg max-w-2xl mx-auto">
        Get a free quote for your home or business
      </p>
    </div>
  </section>

  <!-- Contact Content -->
  <section class="py-16 md:py-20 bg-warm-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div>
          <h2 class="text-3xl font-bold text-forest mb-6">
            Get in Touch
          </h2>
          <p class="text-muted-green mb-8 text-lg">
            Ready for cleaner windows? Give us a call or fill out the form to request a free quote. We'll get back to you promptly.
          </p>

          <!-- Phone -->
          <div class="mb-8">
            <h3 class="text-lg font-bold text-forest mb-2">Phone</h3>
            <a
              href="tel:5414208350"
              class="text-2xl font-bold text-gold hover:opacity-80 transition-opacity"
            >
              (541) 420-8350
            </a>
            <p class="text-muted-green mt-1 text-sm">Click to call on mobile</p>
          </div>

          <!-- Email -->
          <div class="mb-8">
            <h3 class="text-lg font-bold text-forest mb-2">Email</h3>
            <a
              href="mailto:isaac@champshomeservice.com"
              class="text-gold hover:opacity-80 transition-opacity"
            >
              isaac@champshomeservice.com
            </a>
          </div>

          <!-- Service Area -->
          <div class="mb-8">
            <h3 class="text-lg font-bold text-forest mb-2">Service Area</h3>
            <p class="text-muted-green">
              Bend and surrounding areas including Redmond, Sisters, Sunriver, and La Pine
            </p>
          </div>

          <!-- Hours -->
          <div class="bg-forest/5 rounded-lg p-6 border border-cream-border">
            <h3 class="text-lg font-bold text-forest mb-3">Hours</h3>
            <div class="space-y-2 text-muted-green">
              <div class="flex justify-between">
                <span>Monday - Friday</span>
                <span>8:00 AM - 6:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span>Saturday</span>
                <span>By appointment</span>
              </div>
              <div class="flex justify-between">
                <span>Sunday</span>
                <span>Closed</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Quote Request Form -->
        <div>
          <h2 class="text-3xl font-bold text-forest mb-6">
            Request a Quote
          </h2>
          <div class="bg-forest/5 rounded-lg p-6 border border-cream-border min-h-[500px]">
            <!-- Jobber Form Embed -->
            <div id="c0a4b306-8234-4c61-bcda-5fa2e681c849-1485602"></div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

