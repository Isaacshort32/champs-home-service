---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
---

<BaseLayout title="Services" description="Professional window cleaning services in Bend, Oregon. Residential, commercial, and vacation rental window cleaning.">
  <!-- Page Header -->
  <section class="bg-forest py-16 md:py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-warm-white mb-4">
        Our Services
      </h1>
      <p class="text-warm-white/80 text-lg max-w-2xl mx-auto">
        Professional window cleaning for homes and businesses throughout Bend and surrounding areas.
      </p>
    </div>
  </section>

  <!-- Residential Section -->
  <section id="residential" class="py-16 md:py-20 bg-warm-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold text-forest mb-6">
            Residential Window Cleaning
          </h2>
          <p class="text-muted-green mb-6">
            Your home deserves crystal-clear views. Our residential window cleaning service brings the sunshine in and lets you enjoy the beauty of Central Oregon from every room.
          </p>
          <ul class="space-y-3 mb-8">
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-gold flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-muted-green">Interior and exterior window cleaning</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-gold flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-muted-green">Screen cleaning and inspection</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-gold flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-muted-green">Window sill and track cleaning</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-gold flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-muted-green">Skylights and hard-to-reach windows</span>
            </li>
          </ul>
          <Button href="/contact" variant="primary">
            Get a Free Quote
          </Button>
        </div>
        <div class="rounded-lg aspect-[4/3] overflow-hidden border border-cream-border">
          <img src="/images/services/residential.jpg" alt="Residential window cleaning" class="w-full h-full object-cover" />
        </div>
      </div>
    </div>
  </section>

  <!-- Commercial Section -->
  <section id="commercial" class="py-16 md:py-20 bg-forest/5">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="order-2 lg:order-1 rounded-lg aspect-[4/3] overflow-hidden border border-cream-border">
          <img src="/images/services/commercial.jpg" alt="Commercial window cleaning" class="w-full h-full object-cover" />
        </div>
        <div class="order-1 lg:order-2">
          <h2 class="text-3xl md:text-4xl font-bold text-forest mb-6">
            Commercial Window Cleaning
          </h2>
          <p class="text-muted-green mb-6">
            First impressions matter. Keep your business looking professional with sparkling clean windows that welcome customers and showcase your space.
          </p>
          <ul class="space-y-3 mb-8">
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-gold flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-muted-green">Storefronts and retail spaces</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-gold flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-muted-green">Office buildings and complexes</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-gold flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-muted-green">Restaurants and hospitality</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-gold flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-muted-green">Flexible scheduling to minimize disruption</span>
            </li>
          </ul>
          <Button href="/contact" variant="primary">
            Request a Quote
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Vacation Rentals Section -->
  <section id="vacation-rentals" class="py-16 md:py-20 bg-warm-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold text-forest mb-6">
            Vacation Rental Cleaning
          </h2>
          <p class="text-muted-green mb-6">
            Impress your guests with spotless windows. We offer flexible scheduling to keep your rental property looking its best between bookings.
          </p>
          <ul class="space-y-3 mb-8">
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-gold flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-muted-green">Scheduled recurring service</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-gold flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-muted-green">Coordination with property managers</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-gold flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-muted-green">Quick turnaround times</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-gold flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-muted-green">Reliable and trustworthy service</span>
            </li>
          </ul>
          <Button href="/contact" variant="primary">
            Schedule Service
          </Button>
        </div>
        <div class="rounded-lg aspect-[4/3] overflow-hidden border border-cream-border">
          <img src="/images/services/vacation.jpg" alt="Vacation rental window cleaning" class="w-full h-full object-cover" />
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-20 bg-forest">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-warm-white mb-6">
        Ready to Get Started?
      </h2>
      <p class="text-warm-white/80 text-lg mb-8 max-w-2xl mx-auto">
        Contact us today for a free quote. We'll assess your needs and provide a fair, transparent estimate.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/contact" variant="secondary" size="large">
          Get a Free Quote
        </Button>
        <a
          href="tel:5414208350"
          class="inline-block font-bold text-warm-white border-2 border-warm-white rounded px-8 py-4 text-lg hover:bg-warm-white hover:text-forest transition-all duration-200"
        >
          (541) 420-8350
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
