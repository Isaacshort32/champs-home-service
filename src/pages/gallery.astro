---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
---

<BaseLayout title="Gallery" description="See examples of our professional window cleaning work. Before and after photos from homes and businesses in Bend, Oregon.">
  <!-- Page Header -->
  <section class="bg-forest py-16 md:py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-warm-white mb-4">
        Our Work
      </h1>
      <p class="text-warm-white/80 text-lg max-w-2xl mx-auto">
        See the difference professional window cleaning makes
      </p>
    </div>
  </section>

  <!-- Gallery Grid -->
  <section class="py-16 md:py-20 bg-warm-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="text-center text-muted-green mb-12 text-lg">
        Photos coming soon! Check back to see before and after shots of our work.
      </p>

      <!-- Placeholder Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {[1, 2, 3, 4, 5, 6].map((item) => (
          <div class="bg-forest/5 rounded-lg aspect-[4/3] flex items-center justify-center border border-cream-border">
            <div class="text-center">
              <svg class="w-12 h-12 text-muted-green/30 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span class="text-muted-green/50 text-sm">Photo {item}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-20 bg-forest">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-warm-white mb-6">
        Ready for Your Own Transformation?
      </h2>
      <p class="text-warm-white/80 text-lg mb-8 max-w-2xl mx-auto">
        Get a free quote and see the difference professional window cleaning can make for your home or business.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/contact" variant="secondary" size="large">
          Get a Free Quote
        </Button>
        <a
          href="tel:5414208350"
          class="inline-block font-bold text-warm-white border-2 border-warm-white rounded px-8 py-4 text-lg hover:bg-warm-white hover:text-forest transition-all duration-200"
        >
          (541) 420-8350
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
