---
interface Props {
  href: string;
  variant?: 'primary' | 'secondary';
  size?: 'default' | 'large';
  class?: string;
}

const { href, variant = 'primary', size = 'default', class: className = '' } = Astro.props;

const baseClasses = 'inline-block font-bold rounded transition-all duration-200';
const sizeClasses = size === 'large' ? 'px-8 py-4 text-lg' : 'px-6 py-3';
const variantClasses = variant === 'primary'
  ? 'btn-primary'
  : 'btn-secondary';
---

<a href={href} class:list={[baseClasses, sizeClasses, variantClasses, className]}>
  <slot />
</a>
