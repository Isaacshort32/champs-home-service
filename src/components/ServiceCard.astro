---
interface Props {
  title: string;
  description: string;
  image: string;
  href?: string;
}

const { title, description, image, href = '/services' } = Astro.props;
---

<a href={href} class="service-card block bg-warm-white border border-cream-border rounded-lg overflow-hidden hover:border-forest/20">
  <div class="aspect-[4/3] overflow-hidden">
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
    />
  </div>
  <div class="p-6">
    <h3 class="text-xl font-bold text-forest mb-2">{title}</h3>
    <p class="text-muted-green">{description}</p>
    <span class="inline-block mt-4 text-gold font-medium">
      Learn more &rarr;
    </span>
  </div>
</a>
