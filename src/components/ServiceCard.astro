---
interface Props {
  title: string;
  description: string;
  icon: 'home' | 'building' | 'key';
  href?: string;
}

const { title, description, icon, href = '/services' } = Astro.props;

const icons = {
  home: `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
  </svg>`,
  building: `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
  </svg>`,
  key: `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
  </svg>`
};
---

<a href={href} class="service-card block bg-warm-white border border-cream-border rounded-lg p-6 hover:border-forest/20">
  <div class="text-forest mb-4" set:html={icons[icon]} />
  <h3 class="text-xl font-bold text-forest mb-2">{title}</h3>
  <p class="text-muted-green">{description}</p>
  <span class="inline-block mt-4 text-gold font-medium">
    Learn more &rarr;
  </span>
</a>
