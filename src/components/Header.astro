---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/services', label: 'Services' },
  { href: '/about', label: 'About' },
  { href: '/gallery', label: 'Gallery' },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="bg-warm-white border-b border-cream-border sticky top-0 z-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <!-- Logo -->
      <a href="/" class="hover:opacity-80 transition-opacity flex-shrink-0" aria-label="Champs Home Service - Home">
        <div class="logo">
          <div class="logo-line"></div>
          <div class="logo-line logo-line--inner"></div>
          <div class="logo-title">CHAMPS</div>
          <div class="logo-subtitle"><span class="logo-dash"></span>HOME SERVICE<span class="logo-dash"></span></div>
          <div class="logo-line logo-line--inner"></div>
          <div class="logo-line"></div>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              "transition-colors font-medium",
              (currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href)))
                ? "text-gold font-bold"
                : "text-muted-green hover:text-forest"
            ]}
          >
            {link.label}
          </a>
        ))}
        <a
          href="tel:5414208350"
          class="text-gold font-bold hover:opacity-80 transition-opacity"
        >
          (541) 420-8350
        </a>
      </nav>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-forest"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <nav id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col gap-4">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              "transition-colors font-medium py-2",
              (currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href)))
                ? "text-gold font-bold"
                : "text-muted-green hover:text-forest"
            ]}
          >
            {link.label}
          </a>
        ))}
        <a
          href="tel:5414208350"
          class="text-gold font-bold text-lg py-2"
        >
          (541) 420-8350
        </a>
      </div>
    </nav>
  </div>
</header>

<style>
  .logo {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2px;
    padding: 2px 0;
  }
  .logo-line {
    width: 100%;
    height: 2px;
    background: #b8860b;
  }
  .logo-line--inner {
    height: 1px;
    opacity: 0.4;
  }
  .logo-title {
    font-family: 'Playfair Display', serif;
    font-weight: 700;
    font-size: 22px;
    letter-spacing: 3px;
    color: #1a3a2f;
    line-height: 1.1;
    margin: 2px 0 0;
  }
  .logo-subtitle {
    font-family: 'DM Sans', sans-serif;
    font-weight: 400;
    font-size: 9px;
    letter-spacing: 4px;
    color: #5c6a62;
    display: flex;
    align-items: center;
    gap: 5px;
    margin: -1px 0 2px;
  }
  .logo-dash {
    display: inline-block;
    width: 8px;
    height: 1px;
    background: #b8860b;
  }

  @media (min-width: 768px) {
    .logo-title {
      font-size: 26px;
      letter-spacing: 4px;
    }
    .logo-subtitle {
      font-size: 10px;
      letter-spacing: 5px;
    }
  }
</style>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    const isExpanded = menuBtn.getAttribute('aria-expanded') === 'true';
    menuBtn.setAttribute('aria-expanded', (!isExpanded).toString());
    mobileMenu?.classList.toggle('hidden');
  });
</script>
